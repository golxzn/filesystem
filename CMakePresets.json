{
	"version": 5,
	"cmakeMinimumRequired": { "major": 3, "minor": 23, "patch": 0 },
	"include": [
		"cmake/presets/common.json",
		"cmake/presets/generators.json",
		"cmake/presets/windows.json",
		"cmake/presets/linux.json"
	],
	"configurePresets": [
		{
			"displayName": "[VS2022][MSVC] Debug (x64)",
			"name": "vs22_msvc_x64_debug",
			"inherits": [ "vs22_x64", "win_msvc_x64", "debug" ]
		},
		{
			"displayName": "[VS2022][MSVC] Release (x64)",
			"name": "vs22_msvc_x64_release",
			"inherits": [ "vs22_x64", "win_msvc_x64", "release" ]
		},

		{
			"displayName": "[Ninja][MSVC] Debug (x64)",
			"name": "ninja_msvc_x64_debug",
			"inherits": [ "ninja", "win_msvc_x64", "debug" ]
		},
		{
			"displayName": "[Ninja][MSVC] Release (x64)",
			"name": "ninja_msvc_x64_release",
			"inherits": [ "ninja", "win_msvc_x64", "release" ]
		},

		{
			"displayName": "[Ninja][Clang] Debug (x64)",
			"name": "ninja_msvc_clang_x64_debug",
			"inherits": [ "ninja", "win_msvc_clang_x64", "debug" ]
		},
		{
			"displayName": "[Ninja][Clang] Release (x64)",
			"name": "ninja_msvc_clang_x64_release",
			"inherits": [ "ninja", "win_msvc_clang_x64", "release" ]
		},

		{
			"displayName": "[Ninja][Clang] Debug (x64)",
			"name": "ninja_unix_clang_x64_debug",
			"inherits": [ "ninja", "linux_clang_14", "debug" ]
		},
		{
			"displayName": "[Ninja][Clang] Release (x64)",
			"name": "ninja_unix_clang_x64_release",
			"inherits": [ "ninja", "linux_clang_14", "release" ]
		},

		{
			"displayName": "[Ninja][GCC] Debug (x64)",
			"name": "ninja_unix_gcc_x64_debug",
			"inherits": [ "ninja", "linux_gcc_13", "debug" ]
		},
		{
			"displayName": "[Ninja][GCC] Release (x64)",
			"name": "ninja_unix_gcc_x64_release",
			"inherits": [ "ninja", "linux_gcc_13", "release" ]
		},

		{
			"name": "ci-windows",
			"inherits": "ninja_msvc_x64_release"
		},
		{
			"name": "ci-ubuntu",
			"inherits": "ninja_unix_gcc_x64_release"
		}

	],
	"buildPresets": [
		{
			"name": "ci-windows",
			"configurePreset": "ci-windows",
			"inherits": "ci",
			"condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
		},
		{
			"name": "ci-ubuntu",
			"configurePreset": "ci-ubuntu",
			"inherits": "ci",
			"condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" }
		},

		{
			"name": "ci",
			"hidden": true,
			"configuration": "Release",
			"jobs": 2
		}
	],
	"testPresets": [
		{
			"name": "ci-windows",
			"configurePreset": "ci-windows",
			"inherits": "ci",
			"condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
		},
		{
			"name": "ci-ubuntu",
			"configurePreset": "ci-ubuntu",
			"inherits": "ci",
			"condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" }
		},



		{
			"name": "ci",
			"hidden": true,
			"configuration": "Release",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"stopOnFailure": false,
				"jobs": 2
			}
		}
	]
}