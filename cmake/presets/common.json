{
	"version": 5,
	"configurePresets": [
		{
			"name": "pedantic",
			"hidden": true,
			"warnings": {
				"dev": true,
				"deprecated": true,
				"uninitialized": true,
				"unusedCli": true,
				"systemVars": false
			  },
			  "errors": {
				"dev": true,
				"deprecated": true
			  }
		},
		{
			"name": "disable-docs",
			"hidden": true,
			"cacheVariables": {
				"GXZN_OS_FS_GENERATE_DOCS": "FALSE"
			}
		},
		{
			"name": "standards",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_STANDARD": "17",
				"CMAKE_C_STANDARD_REQUIRED": true,
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": true
			}
		},

		{
			"name": "misc",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"inherits": [ "disable-docs", "standards" ]
		},

		{
			"name": "release",
			"hidden": true,
			"inherits": [ "misc", "pedantic" ],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"GXZN_OS_FS_DEFINITIONS_RELEASE": "NDEBUG;GXZN_OS_FS_RELEASE"
			}
		},
		{
			"name": "debug",
			"hidden": true,
			"inherits": [ "misc", "pedantic" ],
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"GXZN_OS_FS_DEFINITIONS_DEBUG": "GXZN_OS_FS_DEBUG"
			}
		}
	]
}
