{
	"version": 5,
	"configurePresets": [
		{
			"name": "win_default",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" },
			"cacheVariables": {
				"GRM_DEFINITIONS_INIT": "GRM_WINDOWS"
			}
		},
		{
			"name": "win_msvc_clang_x64",
			"hidden": true,
			"inherits": [ "win_default" ],
			"toolchainFile": "${sourceDir}/cmake/toolchains/windows/msvc_clang_x64.cmake"
		},
		{
			"name": "win_msvc_x64",
			"hidden": true,
			"inherits": [ "win_default" ],
			"toolchainFile": "${sourceDir}/cmake/toolchains/windows/msvc_cl_x64.cmake",
			"cacheVariables": {
				"CMAKE_CXX_FLAGS": "/MP16 /EHsc"
			}
		}
	]
}